{
    "openapi": "3.0.0",
    "info": {
        "title": "U-ED News API Documentation",
        "description": "A simple API made with Laravel 8",
        "contact": {
            "email": "work.jerson.baltazar@gmail.com"
        },
        "license": {
            "name": "Apache 2.0",
            "url": "http://www.apache.org/licenses/LICENSE-2.0.html"
        },
        "version": "1.0.0"
    },
    "servers": [
        {
            "url": "http://127.0.0.1:8000/api",
            "description": "Demo API Server"
        }
    ],
    "paths": {
        "/public/articles": {
            "get": {
                "tags": [
                    "Public"
                ],
                "summary": "Get list of articles for home page",
                "description": "Returns list of articles",
                "operationId": "__invoke",
                "responses": {
                    "200": {
                        "description": "Successful operation"
                    }
                }
            }
        },
        "/public/articles/{slug}": {
            "get": {
                "tags": [
                    "Public"
                ],
                "summary": "Get article information by slug",
                "description": "Returns article data",
                "operationId": "showArticleBySlug",
                "parameters": [
                    {
                        "name": "slug",
                        "in": "path",
                        "description": "Article's slug",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Successful operation"
                    },
                    "400": {
                        "description": "Bad Request"
                    },
                    "401": {
                        "description": "Unauthenticated"
                    },
                    "403": {
                        "description": "Forbidden"
                    }
                }
            }
        },
        "/public/articles/tags/{slug}": {
            "get": {
                "tags": [
                    "Public"
                ],
                "summary": "Get all articles by Tag's slug",
                "description": "Returns list of article data",
                "operationId": "showArticlesByTag",
                "parameters": [
                    {
                        "name": "slug",
                        "in": "path",
                        "description": "Tags slug",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    },
                    {
                        "name": "page",
                        "in": "query",
                        "description": "Page",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        }
                    },
                    {
                        "name": "per_page",
                        "in": "query",
                        "description": "Items per page",
                        "required": false,
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Successful operation"
                    },
                    "400": {
                        "description": "Bad Request"
                    },
                    "401": {
                        "description": "Unauthenticated"
                    },
                    "403": {
                        "description": "Forbidden"
                    }
                }
            }
        },
        "/public/articles/category/{categoryName}": {
            "get": {
                "tags": [
                    "Public"
                ],
                "summary": "Get all articles by category name",
                "description": "Returns list of article data",
                "operationId": "showArticlesByCategory",
                "parameters": [
                    {
                        "name": "categoryName",
                        "in": "path",
                        "description": "Category name",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    },
                    {
                        "name": "page",
                        "in": "query",
                        "description": "Page",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        }
                    },
                    {
                        "name": "per_page",
                        "in": "query",
                        "description": "Items per page",
                        "required": false,
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Successful operation"
                    },
                    "400": {
                        "description": "Bad Request"
                    },
                    "401": {
                        "description": "Unauthenticated"
                    },
                    "403": {
                        "description": "Forbidden"
                    }
                }
            }
        }
    },
    "components": {
        "responses": {
            "401": {
                "description": "Unauthenticated"
            },
            "403": {
                "description": "Forbidden"
            }
        }
    },
    "security": [
        []
    ]
}